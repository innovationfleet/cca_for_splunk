         value: "{{ splunk_retentiontime_internal | default('2592000') }}"
         comment: >-
          If not set, it defaults to 30 days
       - option: 'homePath'
         value: "{{ 'volume:' + splunk_volume_name_hot + '/$_index_name/db' }}"
         comment: >-
